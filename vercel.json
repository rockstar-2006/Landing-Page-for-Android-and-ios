{
    "version": 2,
    "cleanUrls": true,
    "headers": [
        {
            "source": "/downloads/:path*",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/vnd.android.package-archive"
                },
                {
                    "key": "Content-Disposition",
                    "value": "attachment"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}